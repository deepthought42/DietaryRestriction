<h1>Listing allergies</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @allergies.each do |allergy| %>
  <tr>
    <td><%= allergy.name %></td>
    <td><%= link_to 'Show', allergy %></td>
    <td><%= link_to image_tag('new-24.png'), edit_allergy_path(allergy) %></td>
    <td><%= link_to image_tag('cross-24.png'), allergy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <tr>
	<td>
	  <ul>
		<b><i>Ingredients</i></b>
		<% for ingredient in allergy.ingredients %>
		  <li><%= h ingredient.name %></li>
		<% end %>
	  </ul>
	</td>
	<td></td>
	<td></td>
	<td></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Allergy', new_allergy_path %>
